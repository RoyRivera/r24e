<div class='container'>
  <div clas='row'>
  <% if notice %>
  <p id="notice" class='alert alert-success'><%= notice %></p>
  <% end %>

  <h1>Listing Users</h1>

  <div class="list-group">
    <% @users.each do |user| %>
      <li class="list-group-item">
        <h4 class="list-group-item-heading"><%= user.username %></h4>
        <ul>
          <div class="list-group-item"><strong>System ID:</strong> <%= user.id %></div>
          <div class="list-group-item"><strong>Email:</strong> <%= user.email %></div>
          <div class="list-group-item"><strong>Website:</strong> <%= user.website %></div>
          <div class="list-group-item"><%= image_tag user.picture, class: 'img-circle', height: 120 %></div>
        </ul>
      </li>
    <% end %>
  </div>

  <button type="button" class="btn btn-default"><%= link_to 'NEW USER', new_user_path %></button>
  <button type="button" class="btn btn-default"><%= link_to 'REMOVE ALL USER WITHOUT PICTURE', remove_user_without_picture_users_path %></button>
  </div>
</div>
